rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function hasCorrectRole(authority) {
      return request.auth.token.editSX != null && request.auth.token.editSX[authority] == true;
    }

    match /{col}/{document=**} {
      allow read: if request.auth != null;
      allow write: if hasCorrectRole(col.split(':')[0]);
    }
  }
}
