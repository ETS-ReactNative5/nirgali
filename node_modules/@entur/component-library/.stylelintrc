{
  "extends": [
    "stylelint-config-recommended",
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "max-nesting-depth": 3,
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": [
        "export",
        "import",
        "global",
        "local",
      ]
    }],
    "property-no-unknown": [true, {
      "ignoreProperties": [
        /ClassName/,
      ]
    }],
    "property-no-vendor-prefix": [true, {
      "ignoreProperties": ["mask", "mask-repeat", "mask-image", "mask-position", "appearance"]
    }]
  },
}
